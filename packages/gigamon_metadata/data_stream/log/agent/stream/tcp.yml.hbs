host: "{{tcp_host}}:{{tcp_port}}"
tags:
{{#if preserve_original_event}}
  - preserve_original_event
{{/if}}
{{#each tags as |tag i|}}
  - {{tag}}
{{/each}}
{{#contains "forwarded" tags}}
publisher_pipeline.disable_host: true
{{/contains}}
{{#if ssl}}
ssl: {{ssl}}
{{/if}}
processors:
- add_locale: ~
{{#if preserve_original_event}}
- copy_fields:
    fields:
    - from: message
      to: event.original
{{/if}}
- decode_json_fields:
    fields: ["message"]
    target: gigamon
    add_error_key: true
{{#if processors}}
{{processors}}
{{/if}}
{{#if tcp_options}}
{{tcp_options}}
{{/if}}
